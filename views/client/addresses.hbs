<div class="container py-4">
  
  <div class="d-flex justify-content-between align-items-end mb-4">
    <div>
      <h2 class="fw-bold text-dark mb-1">
        <i class="fas fa-map-marked-alt text-primary me-2"></i>Mis Direcciones
      </h2>
      <p class="text-muted mb-0">Gestiona los lugares donde recibirás tus pedidos.</p>
    </div>
    <a href="/client/addresses/new" class="btn btn-primary rounded-pill shadow-sm px-4 fw-bold">
      <i class="fas fa-plus me-2"></i> Nueva Dirección
    </a>
  </div>

  {{!-- Alertas --}}
  {{#if success_msg}}
    <div class="alert alert-success alert-dismissible fade show shadow-sm border-0 mb-4" role="alert">
      <i class="fas fa-check-circle me-2"></i> {{success_msg}}
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  {{/if}}

  {{#if error_msg}}
    <div class="alert alert-danger alert-dismissible fade show shadow-sm border-0 mb-4" role="alert">
      <i class="fas fa-exclamation-circle me-2"></i> {{error_msg}}
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  {{/if}}

  {{#if addresses.length}}
    <div class="row g-4">
      {{#each addresses}}
        <div class="col-md-6 col-lg-4">
          <div class="card h-100 border-0 shadow-sm hover-effect rounded-4">
            <div class="card-body p-4 d-flex flex-column">
              
              <div class="d-flex align-items-start mb-3">
                <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px; flex-shrink: 0;">
                  <i class="fas fa-home fa-lg"></i>
                </div>
                <div>
                  <h5 class="card-title fw-bold mb-1 text-dark">{{this.nombre}}</h5>
                  <p class="card-text text-muted small" style="line-height: 1.4;">{{this.descripcion}}</p>
                </div>
              </div>

              <div class="mt-auto pt-3 border-top d-flex justify-content-end gap-2">
                <a href="/client/addresses/{{this._id}}/edit" class="btn btn-sm btn-outline-secondary rounded-pill px-3">
                  <i class="fas fa-pen me-1"></i> Editar
                </a>
                <a href="/client/addresses/{{this._id}}/delete" class="btn btn-sm btn-outline-danger rounded-pill px-3">
                  <i class="fas fa-trash-alt me-1"></i>
                </a>
              </div>

            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    
    <div class="card border-0 shadow-sm rounded-4 py-5 text-center bg-white">
      <div class="card-body">
        <div class="mb-3 text-muted opacity-25">
          <i class="fas fa-map-location-dot fa-4x"></i>
        </div>
        <h4 class="fw-bold text-dark">No tienes direcciones guardadas</h4>
        <p class="text-muted mb-4">Agrega tu casa u oficina para empezar a pedir.</p>
        <a href="/client/addresses/new" class="btn btn-primary rounded-pill px-4 shadow-sm">
          <i class="fas fa-plus me-2"></i> Agregar primera dirección
        </a>
      </div>
    </div>

  {{/if}}

  <div class="mt-5">
    <a href="/client/home" class="btn btn-link text-decoration-none text-muted ps-0">
      <i class="fas fa-arrow-left me-2"></i> Volver al inicio
    </a>
  </div>

</div>