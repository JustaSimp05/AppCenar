<div class="container py-4">
  
  <div class="d-flex align-items-center mb-4">
    <a href="/client/orders" class="btn btn-outline-secondary rounded-circle me-3 shadow-sm" style="width: 40px; height: 40px; padding: 0; display: flex; align-items: center; justify-content: center;">
      <i class="fas fa-arrow-left"></i>
    </a>
    <div>
      <h2 class="fw-bold text-dark mb-0">Detalle del Pedido</h2>
      <p class="text-muted mb-0 small">ID: #{{order._id}} • {{order.creadoEn}}</p>
    </div>
  </div>

  <div class="row g-4">
    
    <div class="col-lg-8">
      
      <div class="card border-0 shadow-sm rounded-4 mb-4 overflow-hidden">
        <div class="card-body p-4">
          <h5 class="fw-bold mb-4">Estado del envío</h5>
          
          <div class="position-relative m-4">
            <div class="progress" style="height: 4px;">
              <div class="progress-bar bg-primary" role="progressbar" 
                   style="width: {{#ifEquals order.estado 'pendiente'}}33%{{/ifEquals}}{{#ifEquals order.estado 'en proceso'}}66%{{/ifEquals}}{{#ifEquals order.estado 'completado'}}100%{{/ifEquals}};">
              </div>
            </div>
            
            <div class="position-absolute top-0 start-0 translate-middle btn btn-sm btn-primary rounded-circle" style="width: 2rem; height:2rem;"><i class="fas fa-clipboard-check"></i></div>
            <div class="position-absolute top-0 start-50 translate-middle btn btn-sm {{#ifEquals order.estado 'pendiente'}}btn-secondary{{else}}btn-primary{{/ifEquals}} rounded-circle" style="width: 2rem; height:2rem;"><i class="fas fa-fire"></i></div>
            <div class="position-absolute top-0 start-100 translate-middle btn btn-sm {{#ifEquals order.estado 'completado'}}btn-primary{{else}}btn-secondary{{/ifEquals}} rounded-circle" style="width: 2rem; height:2rem;"><i class="fas fa-flag-checkered"></i></div>
          </div>
          
          <div class="d-flex justify-content-between text-muted small px-2">
            <span>Recibido</span>
            <span>Preparando</span>
            <span>Entregado</span>
          </div>

          <div class="mt-4 text-center">
            <span class="badge rounded-pill px-3 py-2 fs-6
              {{#ifEquals order.estado 'pendiente'}}bg-warning text-dark{{/ifEquals}}
              {{#ifEquals order.estado 'en proceso'}}bg-info text-white{{/ifEquals}}
              {{#ifEquals order.estado 'completado'}}bg-success text-white{{/ifEquals}}">
              {{order.estado}}
            </span>
          </div>
        </div>
      </div>

      <div class="card border-0 shadow-sm rounded-4 mb-4">
        <div class="card-header bg-white border-bottom py-3">
          <h5 class="mb-0 fw-bold"><i class="fas fa-utensils text-primary me-2"></i>Productos</h5>
        </div>
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table align-middle mb-0">
              <thead class="bg-light">
                <tr>
                  <th class="ps-4 border-0">Item</th>
                  <th class="border-0 text-center">Cant.</th>
                  <th class="border-0 text-end pe-4">Precio</th>
                </tr>
              </thead>
              <tbody>
                {{#each order.productos}}
                <tr>
                  <td class="ps-4 py-3">
                    <div class="d-flex align-items-center">
                      {{#if this.producto.foto}}
                        <img src="{{this.producto.foto}}" class="rounded-3 me-3 shadow-sm" style="width: 60px; height: 60px; object-fit: cover;">
                      {{else}}
                        <div class="rounded-3 bg-light d-flex align-items-center justify-content-center me-3" style="width: 60px; height: 60px;">
                          <i class="fas fa-utensils text-muted"></i>
                        </div>
                      {{/if}}
                      <div>
                        <h6 class="mb-0 fw-bold text-dark">{{this.producto.nombre}}</h6>
                        <small class="text-muted d-block text-truncate" style="max-width: 200px;">{{this.producto.descripcion}}</small>
                      </div>
                    </div>
                  </td>
                  <td class="text-center fw-bold text-muted">x{{this.cantidad}}</td>
                  <td class="text-end pe-4 fw-bold text-primary">RD$ {{multiply this.producto.precio this.cantidad}}</td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>

    </div>

    <div class="col-lg-4">
      
      <div class="card border-0 shadow-sm rounded-4 mb-4 bg-light">
        <div class="card-body p-4">
          <h5 class="fw-bold mb-3">Resumen</h5>
          <div class="d-flex justify-content-between mb-2 text-muted">
            <span>Subtotal</span>
            <span>RD$ {{order.subtotal}}</span>
          </div>
          <div class="d-flex justify-content-between mb-3 text-muted">
            <span>ITBIS ({{order.itbis}}%)</span>
            <span>RD$ {{order.itbisMonto}}</span>
          </div> <div class="border-top pt-3 d-flex justify-content-between align-items-center">
            <span class="h5 fw-bold mb-0">Total</span>
            <span class="h4 fw-bold text-success mb-0">RD$ {{order.total}}</span>
          </div>
        </div>
      </div>

      <div class="card border-0 shadow-sm rounded-4 mb-4">
        <div class="card-body p-4">
          <h6 class="text-uppercase text-muted small fw-bold mb-3">Restaurante</h6>
          <div class="d-flex align-items-center">
            {{#if order.comercio.logoComercio}}
              <img src="{{order.comercio.logoComercio}}" class="rounded-circle border me-3" style="width: 50px; height: 50px; object-fit: cover;">
            {{else}}
              <div class="rounded-circle bg-light d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                <i class="fas fa-store"></i>
              </div>
            {{/if}}
            <div>
              <h6 class="fw-bold mb-0">{{order.comercio.nombreComercio}}</h6>
              <a href="tel:{{order.comercio.telefono}}" class="text-decoration-none small text-primary">
                <i class="fas fa-phone me-1"></i> {{order.comercio.telefono}}
              </a>
            </div>
          </div>
        </div>
      </div>

      <div class="card border-0 shadow-sm rounded-4 mb-4">
        <div class="card-body p-4">
          <h6 class="text-uppercase text-muted small fw-bold mb-3">Dirección de Entrega</h6>
          <div class="d-flex">
            <div class="me-3 text-danger"><i class="fas fa-map-marker-alt fa-lg"></i></div>
            <div>
              {{#if order.direccion}}
                <h6 class="fw-bold mb-1">{{order.direccion.nombre}}</h6>
                <p class="text-muted small mb-0">{{order.direccion.descripcion}}</p>
              {{else}}
                <span class="text-muted fst-italic">Dirección no disponible</span>
              {{/if}}
            </div>
          </div>
        </div>
      </div>

      {{#if order.delivery}}
      <div class="card border-0 shadow-sm rounded-4 bg-primary text-white">
        <div class="card-body p-4">
          <h6 class="text-uppercase small fw-bold mb-3 opacity-75">Tu Repartidor</h6>
          <div class="d-flex align-items-center">
            <div class="bg-white text-primary rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 45px; height: 45px;">
              <i class="fas fa-motorcycle"></i>
            </div>
            <div>
              <h6 class="fw-bold mb-0">{{order.delivery.nombre}} {{order.delivery.apellido}}</h6>
              <div class="small opacity-75">{{order.delivery.telefono}}</div>
            </div>
          </div>
        </div>
      </div>
      {{/if}}

    </div>

  </div>
</div>