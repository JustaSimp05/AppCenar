<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-xl-6">
      
      <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
        
        <div class="bg-primary p-5 text-center position-relative" style="background: linear-gradient(135deg, var(--primary-color), #2d3436);">
          <h3 class="text-white fw-bold mb-0">Mi Perfil</h3>
        </div>

        <div class="card-body p-4 p-md-5 pt-0">
          
          <div class="text-center position-relative mb-4" style="margin-top: -60px;">
            <div class="d-inline-block position-relative">
              {{#if user.fotoPerfil}}
                <img src="{{user.fotoPerfil}}" alt="Foto de perfil" 
                     class="rounded-circle border border-4 border-white shadow-md bg-white" 
                     style="width: 120px; height: 120px; object-fit: cover;">
              {{else}}
                <div class="rounded-circle border border-4 border-white shadow-md bg-white d-flex align-items-center justify-content-center" 
                     style="width: 120px; height: 120px;">
                  <i class="fas fa-user fa-3x text-muted opacity-50"></i>
                </div>
              {{/if}}
              <div class="position-absolute bottom-0 end-0 bg-white rounded-circle p-2 shadow-sm border text-primary">
                <i class="fas fa-camera small"></i>
              </div>
            </div>
            <h4 class="mt-3 fw-bold text-dark">{{user.username}}</h4>
            <span class="badge bg-light text-muted border rounded-pill px-3">{{user.rol}}</span>
          </div>

          <form method="POST" action="/client/profile" enctype="multipart/form-data">
            
            <div class="row g-3 mb-3">
              <div class="col-md-6">
                <label class="form-label small text-muted fw-bold text-uppercase">Nombre</label>
                <div class="input-group">
                  <span class="input-group-text bg-light border-end-0"><i class="far fa-user"></i></span>
                  <input type="text" name="nombre" class="form-control bg-light border-start-0" value="{{user.nombre}}" required>
                </div>
              </div>
              
              <div class="col-md-6">
                <label class="form-label small text-muted fw-bold text-uppercase">Apellido</label>
                <div class="input-group">
                  <span class="input-group-text bg-light border-end-0"><i class="far fa-user"></i></span>
                  <input type="text" name="apellido" class="form-control bg-light border-start-0" value="{{user.apellido}}" required>
                </div>
              </div>
            </div>

            <div class="mb-4">
              <label class="form-label small text-muted fw-bold text-uppercase">Teléfono</label>
              <div class="input-group">
                <span class="input-group-text bg-light border-end-0"><i class="fas fa-phone-alt"></i></span>
                <input type="text" name="telefono" class="form-control bg-light border-start-0" value="{{user.telefono}}" required>
              </div>
            </div>

            <div class="mb-4">
              <label class="form-label small text-muted fw-bold text-uppercase">Actualizar Foto</label>
              <input type="file" name="fotoPerfil" class="form-control">
              <div class="form-text small">Sube una imagen cuadrada (JPG, PNG) para mejor visualización.</div>
            </div>

            <hr class="my-4 opacity-10">

            <div class="d-flex justify-content-between align-items-center">
              <a href="/client/home" class="btn btn-link text-muted text-decoration-none ps-0">
                <i class="fas fa-arrow-left me-2"></i> Cancelar
              </a>
              <button type="submit" class="btn btn-primary rounded-pill px-5 shadow-sm fw-bold">
                Guardar Cambios
              </button>
            </div>

          </form>

        </div>
      </div>

    </div>
  </div>
</div>