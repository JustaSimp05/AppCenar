<div class="container mt-4">
  <div class="row mb-4">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
          <h2>{{comercio.nombreComercio}}</h2>
          <p class="text-muted mb-0">
            <i class="fas fa-map-marker-alt me-1"></i>{{comercio.tipoComercio.nombre}}
          </p>
        </div>
        <div class="text-end">
          <a href="/client/comercios/{{comercio.tipoComercio._id}}" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Volver
          </a>
        </div>
      </div>

      <!-- Información del comercio -->
      <div class="card mb-4">
        <div class="card-body">
          <div class="row align-items-center">
            {{#if comercio.logoComercio}}
            <div class="col-md-2 text-center">
              <img src="/{{comercio.logoComercio}}" alt="{{comercio.nombreComercio}}" 
                   class="img-fluid rounded-circle" style="width: 80px; height: 80px; object-fit: cover;">
            </div>
            {{/if}}
            <div class="col-md-8">
              <h5 class="mb-1">{{comercio.nombreComercio}}</h5>
              <p class="text-muted mb-1">
                <i class="fas fa-phone me-2"></i>{{comercio.telefono}}
              </p>
              <p class="text-muted mb-1">
                <i class="fas fa-clock me-2"></i>
                Abierto: {{comercio.horaApertura}} - {{comercio.horaCierre}}
              </p>
            </div>
            <div class="col-md-2 text-end">
              <button class="btn btn-outline-danger btn-sm toggle-favorito" 
                      data-comercio="{{comercio._id}}"
                      data-action="agregar">
                <i class="far fa-heart"></i> Favorito
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Carrito lateral -->
  <div class="row">
    <div class="col-lg-9">
      <!-- Categorías y productos -->
      <div id="contenedorProductos">
        <!-- Categorías -->
        {{#each categorias}}
        <div class="mb-5">
          <div class="d-flex align-items-center mb-3">
            <h4 class="mb-0">{{this.nombre}}</h4>
            {{#if this.descripcion}}
            <small class="text-muted ms-2">{{this.descripcion}}</small>
            {{/if}}
          </div>
          
          <div class="row">
            {{#each this.productos}}
            <div class="col-md-4 col-sm-6 mb-4">
              <div class="card h-100 shadow-sm">
                {{#if this.foto}}
                <img src="/{{this.foto}}" class="card-img-top" alt="{{this.nombre}}" 
                     style="height: 200px; object-fit: cover;">
                {{else}}
                <div class="card-img-top bg-light d-flex align-items-center justify-content-center" 
                     style="height: 200px;">
                  <i class="fas fa-utensils fa-4x text-muted"></i>
                </div>
                {{/if}}
                <div class="card-body d-flex flex-column">
                  <h6 class="card-title">{{this.nombre}}</h6>
                  <p class="card-text text-muted small flex-grow-1">{{this.descripcion}}</p>
                  <div class="d-flex justify-content-between align-items-center mt-auto">
                    <span class="h5 text-success mb-0">RD${{this.precio}}</span>
                    <button class="btn btn-success btn-sm agregar-carrito" 
                            data-producto="{{this._id}}"
                            data-nombre="{{this.nombre}}"
                            data-precio="{{this.precio}}"
                            data-comercio="{{../comercio._id}}">
                      <i class="fas fa-plus me-1"></i>Agregar
                    </button>
                  </div>
                </div>
              </div>
            </div>
            {{else}}
            <div class="col-12">
              <p class="text-muted">No hay productos en esta categoría.</p>
            </div>
            {{/each}}
          </div>
        </div>
        {{/each}}

        <!-- Productos sin categoría -->
        {{#if productosSinCategoria.length}}
        <div class="mb-5">
          <h4 class="mb-3">Otros Productos</h4>
          <div class="row">
            {{#each productosSinCategoria}}
            <div class="col-md-4 col-sm-6 mb-4">
              <div class="card h-100 shadow-sm">
                {{#if this.foto}}
                <img src="/{{this.foto}}" class="card-img-top" alt="{{this.nombre}}" 
                     style="height: 200px; object-fit: cover;">
                {{else}}
                <div class="card-img-top bg-light d-flex align-items-center justify-content-center" 
                     style="height: 200px;">
                  <i class="fas fa-utensils fa-4x text-muted"></i>
                </div>
                {{/if}}
                <div class="card-body d-flex flex-column">
                  <h6 class="card-title">{{this.nombre}}</h6>
                  <p class="card-text text-muted small flex-grow-1">{{this.descripcion}}</p>
                  <div class="d-flex justify-content-between align-items-center mt-auto">
                    <span class="h5 text-success mb-0">RD${{this.precio}}</span>
                    <button class="btn btn-success btn-sm agregar-carrito" 
                            data-producto="{{this._id}}"
                            data-nombre="{{this.nombre}}"
                            data-precio="{{this.precio}}"
                            data-comercio="{{../comercio._id}}">
                      <i class="fas fa-plus me-1"></i>Agregar
                    </button>
                  </div>
                </div>
              </div>
            </div>
            {{/each}}
          </div>
        </div>
        {{/if}}
      </div>
    </div>

    <!-- Panel del carrito -->
    <div class="col-lg-3">
      <div class="card sticky-top" style="top: 20px;">
        <div class="card-header bg-success text-white">
          <h6 class="mb-0"><i class="fas fa-shopping-cart me-2"></i>Mi Pedido</h6>
          <small class="d-block">({{#if carrito}}{{carrito.length}}{{else}}0{{/if}} productos)</small>
        </div>
        <div class="card-body p-0">
          <div id="contenedorCarrito">
            {{#if carrito}}
            {{#each carrito}}
            <div class="producto-carrito p-3 border-bottom" data-producto="{{this._id}}">
              <div class="d-flex justify-content-between align-items-start">
                <div class="flex-grow-1 me-2">
                  <h6 class="mb-1">{{this.nombre}}</h6>
                  <small class="text-muted">RD${{this.precio}} c/u</small>
                </div>
                <div class="text-end">
                  <div class="input-group input-group-sm w-100" style="max-width: 120px;">
                    <button class="btn btn-outline-secondary decrementar" type="button">-</button>
                    <input type="number" class="form-control cantidad" value="{{this.cantidad}}" min="1" readonly>
                    <button class="btn btn-outline-secondary incrementar" type="button">+</button>
                  </div>
                  <div class="mt-1">
                    <small class="fw-bold text-success">RD${{(this.precio * this.cantidad).toFixed(2)}}</small>
                  </div>
                  <button class="btn btn-sm btn-outline-danger remover-carrito mt-1" type="button">
                    <i class="fas fa-trash"></i>
                  </button>
                </div>
              </div>
            </div>
            {{/each}}
            {{else}}
            <div class="p-3 text-center text-muted">
              <i class="fas fa-shopping-cart fa-3x mb-3 opacity-50"></i>
              <p>Tu carrito está vacío</p>
              <small>Agrega productos del menú</small>
            </div>
            {{/if}}
          </div>
          
          {{#if carrito}}
          <div class="p-3 border-top bg-light">
            <div class="d-flex justify-content-between mb-2">
              <span>Subtotal:</span>
              <span class="h6 mb-0" id="subtotal">RD${{subtotal.toFixed(2)}}</span>
            </div>
            <button id="btnContinuar" class="btn btn-success w-100 {{#unless direcciones.length}}disabled{{/unless}}" 
                    {{#unless direcciones.length}}title="Agrega una dirección primero"{{/unless}}
                    {{!-- data-bs-toggle="modal" data-bs-target="#modalDirecciones" --}}>
              <i class="fas fa-truck me-2"></i>
              Continuar al Pedido
              {{#unless direcciones.length}}<small class="d-block">(Requiere dirección)</small>{{/unless}}
            </button>
          </div>
          {{else}}
          <div class="p-3 text-center">
            <small class="text-muted">No hay productos seleccionados</small>
          </div>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>

