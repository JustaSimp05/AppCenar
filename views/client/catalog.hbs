<script>
document.addEventListener('DOMContentLoaded', function() {
  let carrito = {{json carrito}} || [];
  let subtotal = {{subtotal}} || 0;
  const comercioId = '{{comercio._id}}';

  // Función para actualizar carrito en servidor
  const actualizarCarritoServidor = async (action, productoId, cantidad = 1) => {
    try {
      const response = await fetch('/client/carrito', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ action, productoId, cantidad })
      });
      
      if (!response.ok) throw new Error('Error en servidor');
      
      const data = await response.json();
      return data;
    } catch (error) {
      console.error('Error actualizando carrito:', error);
      mostrarAlerta('Error al actualizar carrito', 'danger');
    }
  };

  // Función para actualizar vista del carrito
  const actualizarVistaCarrito = (nuevoCarrito, nuevoSubtotal) => {
    const contenedor = document.getElementById('contenedorCarrito');
    const btnContinuar = document.getElementById('btnContinuar');
    const subtotalElement = document.getElementById('subtotal');

    carrito = nuevoCarrito;
    subtotal = nuevoSubtotal;

    if (carrito.length === 0) {
      contenedor.innerHTML = `
        <div class="p-3 text-center text-muted">
          <i class="fas fa-shopping-cart fa-3x mb-3 opacity-50"></i>
          <p>Tu carrito está vacío</p>
          <small>Agrega productos del menú</small>
        </div>
      `;
      
      document.querySelector('.card-header h6 small').textContent = '(0 productos)';
      btnContinuar.innerHTML = `
        <i class="fas fa-shopping-cart me-2"></i>
        Carrito Vacío
      `;
      btnContinuar.classList.add('disabled');
      btnContinuar.classList.remove('btn-success');
      btnContinuar.classList.add('btn-outline-secondary');
      subtotalElement.textContent = 'RD$0.00';
      
      return;
    }

    // Actualizar header del carrito
    document.querySelector('.card-header h6 small').textContent = `(${carrito.length} productos)`;

    // Construir HTML del carrito
    let carritoHtml = '';
    carrito.forEach(producto => {
      carritoHtml += `
        <div class="producto-carrito p-3 border-bottom" data-producto="${producto._id}">
          <div class="d-flex justify-content-between align-items-start">
            <div class="flex-grow-1 me-2">
              <h6 class="mb-1">${producto.nombre}</h6>
              <small class="text-muted">RD$${producto.precio.toFixed(2)} c/u</small>
            </div>
            <div class="text-end">
              <div class="input-group input-group-sm w-100" style="max-width: 120px;">
                <button class="btn btn-outline-secondary decrementar" type="button" data-producto="${producto._id}">-</button>
                <input type="number" class="form-control cantidad" value="${producto.cantidad}" min="1" readonly>
                <button class="btn btn-outline-secondary incrementar" type="button" data-producto="${producto._id}">+</button>
              </div>
              <div class="mt-1">
                <small class="fw-bold text-success">
                  RD$${(producto.precio * producto.cantidad).toFixed(2)}
                </small>
              </div>
              <button class="btn btn-sm btn-outline-danger remover-carrito mt-1" type="button" data-producto="${producto._id}">
                <i class="fas fa-trash"></i>
              </button>
            </div>
          </div>
        </div>
      `;
    });

    contenedor.innerHTML = carritoHtml;

    // Actualizar subtotal y botón
    subtotalElement.textContent = `RD$${subtotal.toFixed(2)}`;
    btnContinuar.innerHTML = `
      <i class="fas fa-truck me-2"></i>
      Continuar al Pedido
      <small class="d-block">RD$${subtotal.toFixed(2)}</small>
    `;
    btnContinuar.classList.remove('disabled', 'btn-outline-secondary');
    btnContinuar.classList.add('btn-success');

    // Si no hay direcciones, mantener disabled
    const tieneDirecciones = {{direcciones.length}} > 0;
    if (!tieneDirecciones) {
      btnContinuar.classList.add('disabled');
      btnContinuar.title = 'Agrega una dirección primero';
    }
  };

  // Event listeners para carrito
  document.addEventListener('click', async function(e) {
    if (e.target.closest('.agregar-carrito')) {
      e.preventDefault();
      const btn = e.target.closest('.agregar-carrito');
      const productoId = btn.dataset.producto;
      const nombre = btn.dataset.nombre;
      const precio = parseFloat(btn.dataset.precio);
      const cantidad = 1;

      // Deshabilitar botón temporalmente
      const originalText = btn.innerHTML;
      btn.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Agregando...';
      btn.disabled = true;

      try {
        const data = await actualizarCarritoServidor('agregar', productoId, cantidad);
        
        if (data) {
          // Actualizar vista
          actualizarVistaCarrito(data.carrito, data.subtotal);
          
          // Animación de éxito
          btn.innerHTML = '<i class="fas fa-check me-1"></i>Agregado!';
          setTimeout(() => {
            btn.innerHTML = originalText;
            btn.disabled = false;
          }, 1500);

          mostrarAlerta(`${nombre} agregado al carrito`, 'success');
        }
      } catch (error) {
        btn.innerHTML = originalText;
        btn.disabled = false;
        mostrarAlerta('Error al agregar producto', 'danger');
      }
    }

    if (e.target.closest('.decrementar')) {
      const btn = e.target.closest('.decrementar');
      const productoId = btn.dataset.producto;
      const producto = carrito.find(p => p._id === productoId);
      
      if (producto && producto.cantidad > 1) {
        await actualizarCarritoServidor('agregar', productoId, -1);
        location.reload(); // Simple recarga para actualizar
      }
    }

    if (e.target.closest('.incrementar')) {
      const btn = e.target.closest('.incrementar');
      const productoId = btn.dataset.producto;
      await actualizarCarritoServidor('agregar', productoId, 1);
      location.reload();
    }

    if (e.target.closest('.remover-carrito')) {
      if (confirm('¿Eliminar este producto del carrito?')) {
        const btn = e.target.closest('.remover-carrito');
        const productoId = btn.dataset.producto;
        
        try {
          await actualizarCarritoServidor('remover', productoId);
          location.reload();
        } catch (error) {
          mostrarAlerta('Error al remover producto', 'danger');
        }
      }
    }

    if (e.target.closest('.toggle-favorito')) {
      const btn = e.target.closest('.toggle-favorito');
      const comercioId = btn.dataset.comercio;
      const action = btn.dataset.action;

      fetch('/client/favoritos', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ comercioId, action })
      })
      .then(res => res.json())
      .then(data => {
        if (data.success) {
          if (action === 'agregar') {
            btn.innerHTML = '<i class="fas fa-heart"></i> Remover';
            btn.dataset.action = 'remover';
          } else {
            btn.innerHTML = '<i class="far fa-heart"></i> Favorito';
            btn.dataset.action = 'agregar';
          }
          mostrarAlerta(data.message, 'success');
        } else {
          mostrarAlerta(data.message, 'warning');
        }
      })
      .catch(() => mostrarAlerta('Error al procesar favorito', 'danger'));
    }

    if (e.target.closest('#btnContinuar') && !e.target.closest('#btnContinuar').classList.contains('disabled')) {
      // Redirigir a selección de dirección
      window.location.href = '/client/pedido/direccion';
    }
  });

  // Función para mostrar alertas
  function mostrarAlerta(mensaje, tipo = 'info') {
    const alerta = document.createElement('div');
    alerta.className = `alert alert-${tipo === 'success' ? 'success' : tipo === 'danger' ? 'danger' : 'info'} alert-dismissible fade show position-fixed`;
    alerta.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 250px;';
    alerta.innerHTML = `
      ${mensaje}
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    `;
    document.body.appendChild(alerta);
    
    setTimeout(() => alerta.remove(), 4000);
  }
});
</script>
