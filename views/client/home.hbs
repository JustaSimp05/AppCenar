<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <h2 class="mb-4">Bienvenido, {{user.nombre}} {{user.apellido}}</h2>
      <p class="lead">Explora los diferentes tipos de comercios disponibles</p>
    </div>
  </div>

  <div class="row">
    {{#each commerceTypes}}
    <div class="col-md-3 col-sm-6 mb-4">
      <div class="card h-100 text-center border-primary">
        {{#if this.icono}}
          <img src="/{{this.icono}}" class="card-img-top p-3" alt="{{this.nombre}}" 
              style="height: 260px; object-fit: contain;">
        {{else}}
          <div class="card-img-top bg-primary d-flex align-items-center justify-content-center" 
              style="height: 260px;">
            <i class="fas fa-store fa-3x text-white"></i>
          </div>
        {{/if}}
        <div class="card-body d-flex flex-column">
          <h5 class="card-title">{{this.nombre}}</h5>
          <p class="card-text flex-grow-1">{{this.descripcion}}</p>
          <a href="/client/commerces/{{this._id}}" class="btn btn-primary mt-auto">Ver Comercios</a>
        </div>
      </div>
    </div>
    {{/each}}
  </div>

  {{#if (eq commerceTypes.length 0)}}
  <div class="alert alert-info text-center">
    <i class="fas fa-info-circle me-2"></i>
    No hay tipos de comercios disponibles. Contacta al administrador.
  </div>
  {{/if}}
</div>
