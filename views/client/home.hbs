<div class="container py-4">
  
  <div class="text-center py-5 mb-4">
    <div class="mb-3 d-inline-block p-3 rounded-circle bg-white shadow-sm text-primary">
      <i class="fas fa-hand-spock fa-2x"></i>
    </div>
    <h1 class="display-5 fw-bold text-dark mb-2">
      Hola, <span class="text-primary">{{user.nombre}}</span>
    </h1>
    <p class="lead text-muted mb-0">¿Qué se te antoja comer hoy?</p>
  </div>

  <div class="row g-4 justify-content-center">
    
    {{#each commerceTypes}}
    <div class="col-6 col-md-4 col-lg-3">
      <div class="card h-100 border-0 shadow-sm hover-effect rounded-4 text-center overflow-hidden position-relative">
        
        <div class="card-body p-4 d-flex flex-column align-items-center">
          
          <div class="mb-4 d-flex align-items-center justify-content-center" style="height: 100px; width: 100px;">
            {{#if this.icono}}
              <img src="{{this.icono}}" alt="{{this.nombre}}" 
                   class="img-fluid drop-shadow" 
                   style="max-height: 100%; object-fit: contain;">
            {{else}}
              <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center" 
                   style="width: 80px; height: 80px;">
                <i class="fas fa-store fa-2x"></i>
              </div>
            {{/if}}
          </div>

          <h5 class="card-title fw-bold text-dark mb-2">{{this.nombre}}</h5>
          <p class="card-text text-muted small mb-4 flex-grow-1" style="line-height: 1.4;">
            {{this.descripcion}}
          </p>

          <a href="/client/commerces/{{this._id}}" class="btn btn-outline-primary rounded-pill px-4 fw-bold stretched-link w-100">
            Ver Restaurantes
          </a>

        </div>
      </div>
    </div>
    {{/each}}

  </div>

  {{!-- Estado Vacío --}}
  {{#if (eq commerceTypes.length 0)}}
  <div class="row justify-content-center mt-5">
    <div class="col-md-6">
      <div class="card border-0 shadow-sm rounded-4 text-center py-5">
        <div class="card-body">
          <div class="mb-3 text-muted opacity-25">
            <i class="fas fa-store-slash fa-4x"></i>
          </div>
          <h4 class="fw-bold text-dark">No hay servicios disponibles</h4>
          <p class="text-muted mb-0">Parece que aún no hay categorías configuradas.</p>
        </div>
      </div>
    </div>
  </div>
  {{/if}}

</div>