<div class="mt-4">
  <h2>Mis pedidos</h2>
  <hr>

  {{#unless orders.length}}
    <div class="alert alert-info">
      No tienes pedidos todav√≠a.
    </div>
  {{/unless}}

  <div class="row">
    {{#each orders}}
      <div class="col-md-4 mb-3">
        <div class="card h-100">
          <div class="card-body">
            {{#if comercio.logoComercio}}
              <img src="{{comercio.logoComercio}}" class="img-fluid mb-2" style="max-height: 80px; object-fit: contain;">
            {{/if}}
            <h5 class="card-title">{{comercio.nombreComercio}}</h5>
            <p class="card-text">
              Estado: <strong>{{estado}}</strong><br>
              Total: <strong>RD$ {{total}}</strong><br>
              Productos: {{productos.length}}<br>
              Fecha: {{creadoEn}}
            </p>
            <a href="/client/orders/{{_id}}" class="btn btn-sm btn-primary">Ver detalle</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>
