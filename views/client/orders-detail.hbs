<div class="mt-4">
  <h2>Detalle del pedido</h2>
  <hr>

  <div class="mb-3">
    <h4>{{order.commerce.nombreComercio}}</h4>
    <p>
      Estado: <strong>{{order.estado}}</strong><br>
      Fecha: {{order.createdAt}}<br>
      Direcci√≥n: {{order.address.nombre}} - {{order.address.descripcion}}
    </p>
  </div>

  <h5>Productos</h5>
  <ul class="list-group mb-3">
    {{#each order.products}}
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div>
          {{#if this.product.foto}}
            <img src="/{{this.product.foto}}" alt="{{this.product.nombre}}" style="width: 60px; height: 60px; object-fit: cover; margin-right: 10px;">
          {{/if}}
          <strong>{{this.product.nombre}}</strong>
        </div>
        <span>RD$ {{this.product.precio}} x {{this.quantity}}</span>
      </li>
    {{/each}}
  </ul>

  <div class="text-end">
    <p>Subtotal: <strong>RD$ {{order.subtotal}}</strong></p>
    <p>ITBIS: <strong>{{order.itbis}} %</strong></p>
    <p>Total: <strong>RD$ {{order.total}}</strong></p>
  </div>

  <a href="/client/orders" class="btn btn-secondary">Volver a mis pedidos</a>
</div>
