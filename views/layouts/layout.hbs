<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>

    {{!-- Bootstrap desde CDN --}}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    {{!-- FontAwesome para iconos --}}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    {{!-- CSS personalizado --}}
    <link href="/css/style.css" rel="stylesheet" />
</head>
<body class="bg-light">
    
    {{!-- BARRA DE NAVEGACIÓN PRINCIPAL --}}
    <nav class="navbar navbar-expand-lg navbar-dark sticky-top">
        <div class="container">
            {{!-- LOGO DE LA MARCA --}}
            <a class="navbar-brand" href="/">
                <i class="fas fa-utensils me-2"></i>AppCenar
            </a>

            {{#if user}}
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        
                        {{!-- NAV CLIENTE --}}
                        {{#ifEquals user.rol "cliente"}}
                            <li class="nav-item">
                                <a class="nav-link" href="/client/home"><i class="fas fa-home me-1"></i> Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/client/profile"><i class="fas fa-user me-1"></i> Mi perfil</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/client/orders"><i class="fas fa-receipt me-1"></i> Mis pedidos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/client/addresses"><i class="fas fa-map-marker-alt me-1"></i> Direcciones</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/client/favorites"><i class="fas fa-heart me-1"></i> Favoritos</a>
                            </li>
                        {{/ifEquals}}

                        {{!-- NAV COMERCIO --}}
                        {{#ifEquals user.rol "comercio"}}
                            <li class="nav-item">
                                <a class="nav-link" href="/commerce/home"><i class="fas fa-chart-line me-1"></i> Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/commerce/profile"><i class="fas fa-store me-1"></i> Perfil</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/commerce/categories"><i class="fas fa-tags me-1"></i> Categorías</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/commerce/products"><i class="fas fa-hamburger me-1"></i> Productos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/commerce/orders"><i class="fas fa-bell me-1"></i> Pedidos</a>
                            </li>
                        {{/ifEquals}}

                        {{!-- NAV DELIVERY --}}
                        {{#ifEquals user.rol "delivery"}}
                            <li class="nav-item">
                                <a class="nav-link" href="/delivery/home"><i class="fas fa-motorcycle me-1"></i> Panel Delivery</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/delivery/profile"><i class="fas fa-user-helmet-safety me-1"></i> Mi Perfil</a>
                            </li>
                        {{/ifEquals}}

                        {{!-- NAV ADMIN --}}
                        {{#ifEquals user.rol "admin"}}
                            <li class="nav-item">
                                <a class="nav-link" href="/admin/home"><i class="fas fa-tachometer-alt me-1"></i> Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/admin/clients"><i class="fas fa-users me-1"></i> Clientes</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/admin/deliveries"><i class="fas fa-shipping-fast me-1"></i> Delivery</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/admin/commerces"><i class="fas fa-store-alt me-1"></i> Comercios</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/admin/commerce-types"><i class="fas fa-list me-1"></i> Tipos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/admin/admins"><i class="fas fa-user-shield me-1"></i> Admins</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/admin/config"><i class="fas fa-cog me-1"></i> Config</a>
                            </li>
                        {{/ifEquals}}
                    </ul>

                    {{!-- MENÚ DE USUARIO (DERECHA) --}}
                    <div class="d-flex align-items-center gap-3">
                        <div class="dropdown">
                            <a class="nav-link dropdown-toggle text-white d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                {{#if user.fotoPerfil}}
                                    <img src="{{user.fotoPerfil}}" class="rounded-circle border border-2 border-white me-2" style="width:32px; height:32px; object-fit:cover;">
                                {{else}}
                                    <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center me-2" style="width:32px; height:32px;">
                                        <i class="fas fa-user"></i>
                                    </div>
                                {{/if}}
                                <span>{{user.username}}</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow border-0 mt-2">
                                <li class="dropdown-header text-muted small">Conectado como {{user.rol}}</li>
                                <li><a class="dropdown-item" href="/auth/logout"><i class="fas fa-sign-out-alt text-danger me-2"></i> Cerrar sesión</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            {{/if}}
        </div>
    </nav>

    {{!-- CONTENIDO PRINCIPAL --}}
    <div class="container py-4">
        {{!-- ALERTAS DE SISTEMA (Flash Messages) --}}
        {{#if success_msg}}
            <div class="alert alert-success alert-dismissible fade show shadow-sm border-0 d-flex align-items-center" role="alert">
                <i class="fas fa-check-circle me-2 fs-5"></i>
                <div>{{success_msg}}</div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {{/if}}
        {{#if error_msg}}
            <div class="alert alert-danger alert-dismissible fade show shadow-sm border-0 d-flex align-items-center" role="alert">
                <i class="fas fa-exclamation-circle me-2 fs-5"></i>
                <div>{{error_msg}}</div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {{/if}}

        {{!-- CUERPO DE LA VISTA --}}
        {{{body}}}
    </div>

    {{!-- JS de Bootstrap --}}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>