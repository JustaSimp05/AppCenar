<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <title>{{title}}</title>

    {{!-- Bootstrap desde CDN --}}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    {{!-- FontAwesome para iconos --}}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    {{!-- Tu CSS personalizado --}}
    <link href="/css/style.css" rel="stylesheet" />
</head>
<body class="bg-light">
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
  <div class="container">
    <a class="navbar-brand" href="/">AppCenar</a>

    {{#if user}}
      {{!-- NAV CLIENTE --}}
      {{#ifEquals user.rol "cliente"}}
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#clientNav">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="clientNav">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" href="/client/home">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/client/profile">Mi perfil</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/client/orders">Mis pedidos</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/client/addresses">Mis direcciones</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/client/favorites">Mis favoritos</a>
            </li>
          </ul>
        </div>
      {{/ifEquals}}

      {{!-- NAV COMERCIO --}}
      {{#ifEquals user.rol "comercio"}}
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#commerceNav">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="commerceNav">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" href="/commerce/home">Home comercio</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/commerce/profile">Mi perfil</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/commerce/categories">Categorías</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/commerce/products">Productos</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/commerce/orders">Pedidos</a>
            </li>
          </ul>
        </div>
      {{/ifEquals}}

      {{!-- NAV DELIVERY --}}
      {{#ifEquals user.rol "delivery"}}
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#deliveryNav">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="deliveryNav">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" href="/delivery/home">Home Delivery</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/delivery/profile">Mi Perfil</a>
            </li>
          </ul>
        </div>
      {{/ifEquals}}

      {{!-- NAV ADMIN (ACTUALIZADO CON TODAS LAS OPCIONES DEL PDF) --}}
      {{#ifEquals user.rol "admin"}}
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNav">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="adminNav">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" href="/admin/home">Dashboard</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/clients">Clientes</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/deliveries">Delivery</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/commerces">Comercios</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/commerce-types">Tipos Comercio</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/admins">Admins</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/config">Configuración</a>
            </li>
          </ul>
        </div>
      {{/ifEquals}}

      <div class="d-flex align-items-center ms-lg-3">
        <span class="text-white me-3 d-none d-lg-block">Hola, {{user.username}}</span>
        <a href="/auth/logout" class="btn btn-outline-light btn-sm">Cerrar sesión</a>
      </div>
    {{/if}}
  </div>
</nav>

    <div class="container">
        {{#if success_msg}}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{success_msg}}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {{/if}}
        {{#if error_msg}}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                {{error_msg}}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {{/if}}

        {{{body}}}
    </div>

    {{!-- JS de Bootstrap --}}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>