<div class="mt-4">
  <h2>Productos del comercio</h2>
  <p class="text-muted">Gestiona tu catálogo de productos.</p>

  <div class="row">
    <div class="col-md-5">
      <div class="card mb-3">
        <div class="card-header">Nuevo producto</div>
        <div class="card-body">
          <form method="POST" action="/commerce/products" enctype="multipart/form-data">
            <div class="mb-3">
              <label class="form-label">Nombre</label>
              <input type="text" name="nombre" class="form-control" required>
            </div>

            <div class="mb-3">
              <label class="form-label">Descripción</label>
              <textarea name="descripcion" class="form-control" rows="3" placeholder="Opcional"></textarea>
            </div>

            <div class="mb-3">
              <label class="form-label">Precio (RD$)</label>
              <input type="number" name="precio" step="0.01" min="0" class="form-control" required>
            </div>

            <div class="mb-3">
              <label class="form-label">Categoría</label>
              <select name="categoria" class="form-select" required>
                <option value="">Seleccione una categoría...</option>
                {{#each categories}}
                  <option value="{{this._id}}">{{this.nombre}}</option>
                {{/each}}
              </select>
            </div>

            <div class="mb-3">
              <label class="form-label">Foto del producto</label>
              <input type="file" name="foto" class="form-control" accept="image/*">
            </div>

            <button type="submit" class="btn btn-success w-100">Agregar producto</button>
          </form>
        </div>
      </div>
    </div>

    <div class="col-md-7">
      <div class="card mb-3">
        <div class="card-header">Listado de productos</div>
        <div class="card-body p-0">
          {{#if products.length}}
            <table class="table table-hover mb-0 align-middle">
              <thead>
                <tr>
                  <th>Foto</th>
                  <th>Nombre</th>
                  <th>Categoría</th>
                  <th>Precio</th>
                  <th style="width:140px;">Acciones</th>
                </tr>
              </thead>
              <tbody>
                {{#each products}}
                  <tr>
                    <td>
                      {{#if this.foto}}
                        <img src="{{this.foto}}" alt="{{this.nombre}}" class="img-thumbnail" style="max-height:60px;">
                      {{else}}
                        <span class="text-muted">Sin foto</span>
                      {{/if}}
                    </td>
                    <td>{{this.nombre}}</td>
                    <td>{{this.categoria.nombre}}</td>
                    <td>RD$ {{this.precio}}</td>
                    <td>
                      <a href="/commerce/products/{{this._id}}/edit" class="btn btn-sm btn-outline-primary">Editar</a>
                      <a href="/commerce/products/{{this._id}}/delete"
                        class="btn btn-sm btn-outline-danger">
                        Eliminar
                      </a>
                    </td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          {{else}}
            <p class="p-3 text-muted mb-0">Aún no tienes productos registrados.</p>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>
