<div class="mt-4">
  <h2>Editar categoría</h2>
  <p class="text-muted">Modifica los datos de la categoría seleccionada.</p>

  <div class="card">
    <div class="card-body">
      <form method="POST" action="/commerce/categories/{{category._id}}/edit">
        <div class="mb-3">
          <label class="form-label">Nombre</label>
          <input type="text" name="nombre" class="form-control" required value="{{category.nombre}}">
        </div>
        <div class="mb-3">
          <label class="form-label">Descripción</label>
          <textarea name="descripcion" class="form-control" rows="3">{{category.descripcion}}</textarea>
        </div>
        <div class="d-flex justify-content-between">
          <a href="/commerce/categories" class="btn btn-secondary">Volver</a>
          <button type="submit" class="btn btn-primary">Guardar cambios</button>
        </div>
      </form>
    </div>
  </div>
</div>
