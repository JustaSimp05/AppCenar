<div class="mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h2><i class="fas fa-motorcycle text-primary me-2"></i>Panel Delivery</h2>
      <p class="text-muted mb-0">Hola, {{user.username}}. ¿Listo para rodar?</p>
    </div>
    
    {{#if user.fotoPerfil}}
      <img src="{{user.fotoPerfil}}" alt="Perfil" class="rounded-circle border border-2 border-primary" style="width: 60px; height: 60px; object-fit: cover;">
    {{else}}
      <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
        <i class="fas fa-user"></i>
      </div>
    {{/if}}
  </div>

  {{#if myActiveOrders.length}}
  <div class="card border-primary mb-5 shadow">
    <div class="card-header bg-primary text-white">
      <h4 class="mb-0"><i class="fas fa-map-marker-alt me-2"></i>En Curso (Tus entregas)</h4>
    </div>
    <div class="card-body">
      <div class="row">
        {{#each myActiveOrders}}
        <div class="col-md-6 mb-3">
          <div class="card h-100 border-2">
            <div class="card-body">
              <h5 class="card-title text-primary">Pedido #{{this._id}}</h5>
              <hr>
              
              <p class="mb-2">
                <strong><i class="fas fa-store text-muted me-1"></i> Recoger en:</strong><br>
                {{this.comercio.nombreComercio}}<br>
                <small class="text-muted">{{this.comercio.telefono}}</small>
              </p>

              <p class="mb-3">
                <strong><i class="fas fa-home text-muted me-1"></i> Entregar a:</strong><br>
                {{this.cliente.nombre}} {{this.cliente.apellido}}<br>
                <span class="text-dark bg-warning px-2 rounded">{{this.direccion.nombre}}</span><br>
                <small>{{this.direccion.descripcion}}</small><br>
                <a href="tel:{{this.cliente.telefono}}" class="btn btn-sm btn-outline-secondary mt-1">
                  <i class="fas fa-phone"></i> {{this.cliente.telefono}}
                </a>
              </p>

              <div class="alert alert-light border">
                <strong>Total a cobrar:</strong> RD$ {{this.total}}
              </div>

              <form action="/delivery/orders/{{this._id}}/complete" method="POST">
                <button type="submit" class="btn btn-success w-100 py-2 fw-bold">
                  <i class="fas fa-check-circle me-1"></i> ¡ENTREGADO!
                </button>
              </form>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
  {{else}}
    <div class="alert alert-info mb-4">
      <i class="fas fa-info-circle me-2"></i>No tienes entregas en curso. ¡Revisa los pedidos disponibles!
    </div>
  {{/if}}

  <hr class="my-4">

  <div class="row">
    <div class="col-lg-8">
      <h4 class="mb-3 text-secondary">Pedidos Disponibles</h4>
      {{#if availableOrders.length}}
        <div class="row">
          {{#each availableOrders}}
          <div class="col-md-12 mb-3">
            <div class="card shadow-sm">
              <div class="card-body d-flex justify-content-between align-items-center flex-wrap">
                <div>
                  <h5 class="mb-1 text-dark">{{this.comercio.nombreComercio}}</h5>
                  <p class="mb-0 text-muted small">
                    <i class="fas fa-map-pin me-1"></i> Destino: <strong>{{this.direccion.descripcion}}</strong>
                  </p>
                  <p class="mb-0 text-muted small">
                    <i class="fas fa-money-bill-wave me-1"></i> Ganancia aprox: RD$ {{this.total}} (Total orden)
                  </p>
                </div>
                
                <div class="mt-2 mt-md-0">
                  <form action="/delivery/orders/{{this._id}}/take" method="POST">
                    <button type="submit" class="btn btn-outline-primary">
                      <i class="fas fa-hand-paper me-1"></i> Tomar Pedido
                    </button>
                  </form>
                </div>
              </div>
            </div>
          </div>
          {{/each}}
        </div>
      {{else}}
        <p class="text-muted">No hay pedidos disponibles en este momento. Recarga la página en unos minutos.</p>
      {{/if}}
    </div>

    <div class="col-lg-4">
      <h4 class="mb-3 text-secondary">Últimas Entregas</h4>
      <ul class="list-group">
        {{#each historyOrders}}
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
              <small class="d-block fw-bold">Pedido #{{this._id}}</small>
              <small class="text-muted">{{this.creadoEn}}</small>
            </div>
            <span class="badge bg-success rounded-pill">RD$ {{this.total}}</span>
          </li>
        {{else}}
          <li class="list-group-item text-muted text-center">Sin historial reciente</li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>