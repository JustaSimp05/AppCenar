<div class="mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Listado de Comercios</h2>
    <a href="/admin/home" class="btn btn-outline-secondary">Volver al Dashboard</a>
  </div>

  <div class="card shadow-sm">
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover mb-0 align-middle">
          <thead class="table-light">
            <tr>
              <th>Comercio</th>
              <th>Contacto</th>
              <th>Horario</th>
              <th>Pedidos</th>
              <th>Estado</th>
              <th>Acción</th>
            </tr>
          </thead>
          <tbody>
            {{#each commerces}}
            <tr>
              <td>
                <div class="d-flex align-items-center">
                  {{!-- Logo del comercio --}}
                  {{#if this.logoComercio}}
                    <img src="{{this.logoComercio}}" class="rounded-circle me-2 border" style="width:50px;height:50px;object-fit:cover">
                  {{else}}
                    <div class="bg-secondary rounded-circle me-2 d-flex align-items-center justify-content-center text-white" style="width:50px;height:50px">
                      <i class="fas fa-store"></i>
                    </div>
                  {{/if}}
                  <div>
                    <div class="fw-bold">{{this.nombreComercio}}</div>
                    <small class="text-muted">{{this.tipoComercio.nombre}}</small>
                  </div>
                </div>
              </td>
              <td>
                <div class="small"><i class="fas fa-envelope me-1"></i> {{this.correo}}</div>
                <div class="small"><i class="fas fa-phone me-1"></i> {{this.telefono}}</div>
              </td>
              <td>
                <span class="badge bg-light text-dark border">
                  {{this.horaApertura}} - {{this.horaCierre}}
                </span>
              </td>
              {{!-- Cantidad de pedidos (Requisito PDF) --}}
              <td class="text-center fw-bold">{{this.orderCount}}</td>
              <td>
                {{#if this.isActive}}
                  <span class="badge bg-success">Activo</span>
                {{else}}
                  <span class="badge bg-danger">Inactivo</span>
                {{/if}}
              </td>
              <td>
                {{!-- Botón Activar/Inactivar (Requisito PDF) --}}
                <form action="/admin/commerces/{{this._id}}/toggle" method="POST">
                  {{#if this.isActive}}
                    <button type="submit" class="btn btn-sm btn-outline-danger w-100" title="Desactivar comercio">
                      Inactivar
                    </button>
                  {{else}}
                    <button type="submit" class="btn btn-sm btn-success text-white w-100" title="Activar comercio">
                      Activar
                    </button>
                  {{/if}}
                </form>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
        {{#unless commerces.length}}
          <p class="text-center p-4 text-muted">No hay comercios registrados.</p>
        {{/unless}}
      </div>
    </div>
  </div>
</div>